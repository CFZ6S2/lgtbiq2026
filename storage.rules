rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile pictures and media
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // 5MB max
        && (request.resource.contentType.matches('image/.*') || 
            request.resource.contentType.matches('audio/.*'));
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Chat media
    match /chat/{messageId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.resource.size < 10 * 1024 * 1024 // 10MB max for chat
        && (request.resource.contentType.matches('image/.*') || 
            request.resource.contentType.matches('audio/.*'));
    }
    
    // Verification documents (admin only)
    match /verification/{userId}/{allPaths=**} {
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         request.auth.token.role == 'moderator' ||
         request.auth.token.role == 'admin');
      allow write: if request.auth != null && 
        (request.auth.uid == userId ||
         request.auth.token.role == 'moderator' ||
         request.auth.token.role == 'admin')
        && request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // Temporary uploads
    match /temp/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024; // 5MB max
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}