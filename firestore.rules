rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Chat helpers
    function isParticipant(chatData) {
      return request.auth != null && request.auth.uid in chatData.participants;
    }
    
    function isProfileVisible(userId) {
      return get(/databases/$(database)/documents/privacySettings/$(userId)).data.profileVisible != false;
    }
    
    function isNotIncognito(userId) {
      return get(/databases/$(database)/documents/privacySettings/$(userId)).data.incognito != true;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && 
        (isOwner(userId) || (isProfileVisible(userId) && isNotIncognito(userId)));
      allow create: if isAuthenticated() && isOwner(userId); // Requiere autenticación
      allow update: if isAuthenticated() && isOwner(userId);
      allow delete: if false; // No user deletion through API
    }

    // Profiles collection
    match /profiles/{userId} {
      allow read: if isAuthenticated() && 
        (isOwner(userId) || (isProfileVisible(userId) && isNotIncognito(userId)));
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // PrivacySettings collection
    match /privacySettings/{userId} {
      allow read: if isAuthenticated() && 
        (isOwner(userId) || isProfileVisible(userId));
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // Verification collection
    match /verification/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (isOwner(userId) || 
         request.auth.token.role == 'moderator' ||
         request.auth.token.role == 'admin');
    }

    // Likes collection
    match /likes/{likeId} {
      allow read: if isAuthenticated() && 
        (resource.data.fromId == request.auth.uid || resource.data.toId == request.auth.uid);
      allow create: if isAuthenticated() && 
        request.resource.data.fromId == request.auth.uid &&
        request.resource.data.fromId != request.resource.data.toId;
      allow delete: if isAuthenticated() && resource.data.fromId == request.auth.uid;
    }

    // Matches collection
    match /matches/{matchId} {
      allow read: if isAuthenticated() && 
        (resource.data.aId == request.auth.uid || resource.data.bId == request.auth.uid);
      allow create: if false; // Only created by cloud functions
      allow delete: if false; // Matches don't get deleted
    }

    // Messages collection
    match /messages/{messageId} {
      allow read: if isAuthenticated() && 
        (resource.data.senderId == request.auth.uid || resource.data.recipientId == request.auth.uid);
      allow create: if isAuthenticated() && 
        request.resource.data.senderId == request.auth.uid &&
        request.resource.data.senderId != request.resource.data.recipientId;
      allow update: if isAuthenticated() && 
        (resource.data.recipientId == request.auth.uid && request.resource.data.keys().hasAll(['read', 'readAt']));
      allow delete: if false;
    }

    // Blocks collection
    match /blocks/{blockId} {
      allow read: if isAuthenticated() && 
        (resource.data.blockerId == request.auth.uid || resource.data.blockedId == request.auth.uid);
      allow create: if isAuthenticated() && 
        request.resource.data.blockerId == request.auth.uid &&
        request.resource.data.blockerId != request.resource.data.blockedId;
      allow delete: if isAuthenticated() && resource.data.blockerId == request.auth.uid;
    }

    // Reports collection
    match /reports/{reportId} {
      allow read: if isAuthenticated() && 
        (resource.data.reporterId == request.auth.uid || 
         request.auth.token.role == 'moderator' ||
         request.auth.token.role == 'admin');
      allow create: if isAuthenticated() && 
        request.resource.data.reporterId == request.auth.uid;
      allow update: if false; // Reports are read-only after creation
      allow delete: if false;
    }

    // Stats collection (read-only for users)
    match /stats/{statId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only cloud functions can write stats
    }

    // Orientations collection (read-only)
    match /orientations/{orientationId} {
      allow read: if true;
      allow write: if false; // Only admins can modify orientations
    }

    // Chats collection - new chat system (modo estricto)
    match /chats/{chatId} {
      // Solo participantes pueden leer
      allow read: if isParticipant(resource.data);
      
      // Creación de chats: preferiblemente desde backend (Admin SDK)
      allow create: if false;
      
      // Actualización: impedir cambios a 'participants'
      allow update: if isParticipant(resource.data) &&
        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['participants']));
      allow delete: if false;
    }

    // Messages subcollection (modo estricto)
    match /chats/{chatId}/messages/{messageId} {
      function getChatData() {
        return get(/databases/$(database)/documents/chats/$(chatId)).data;
      }
      
      // Solo participantes del chat pueden leer mensajes
      allow read: if isParticipant(getChatData());
      
      // Crear mensaje: debe ser el emisor y pertenecer al chat
      allow create: if isAuthenticated() &&
        isParticipant(getChatData()) &&
        request.resource.data.senderId == request.auth.uid &&
        request.resource.data.senderId != request.resource.data.recipientId;
      
      // Historial inmutable (no editar ni borrar mensajes)
      allow update, delete: if false;
    }
  }
}
